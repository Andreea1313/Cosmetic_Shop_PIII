@{
    ViewData["Title"] = "Product Details";
}
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/Product.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>

    <input type="hidden" id="user-id" value="@ViewBag.UserId" />
    <input type="hidden" id="product-id" value="@ViewBag.ProductId" />

    <div class="container">
        <div class="product-detail">
            <img id="product-image" src="@ViewBag.Image" alt="Product Image">
            <div class="product-info">
                <h1 id="product-name">@ViewBag.Name</h1>
                <p id="product-description">@ViewBag.Description</p>
                <div class="price" id="product-price">$@ViewBag.Price</div>

                <button class="add-to-cart"
                        data-product-id="@ViewBag.ProductId"
                        data-user-id="@ViewBag.UserId">
                    Add to Cart
                </button>

                <button class="like-btn"
                        data-product-id="@ViewBag.ProductId"
                        data-user-id="@ViewBag.UserId">
                    <i class="fa-regular fa-heart"></i>
                </button>
            </div>
        </div>

        <div class="reviews-section">
            <h2>Customer Reviews</h2>
            <div id="reviews-container"></div>

            <textarea id="review-input" placeholder="Write a review..."></textarea>
            <button id="submit-review">Submit Review</button>
        </div>

        <script src="/js/Product.js"></script>
</body>
</html>
