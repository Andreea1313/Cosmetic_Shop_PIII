@{
    Layout = null;
    ViewData["Title"] = "Thank You";
}

<head>
    <link rel="stylesheet" href="/css/home.css" />
    <style>
        body {
            background: url('/images/userbg.jpg');
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh;
            font-family: sans-serif;
        }

        .message-box {
            background-color: #fff0f5;
            border: 2px solid #ff66b2;
